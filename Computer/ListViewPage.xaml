<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Computer.ListViewPage"
             Title="ListViewPage">
    <StackLayout>
        <Border Margin="10" Padding="10" Stroke="Aqua" StrokeThickness="10">
            <ListView ItemsSource="{Binding Singers}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <HorizontalStackLayout>
                                <Label HorizontalTextAlignment="Start" VerticalTextAlignment="Center" Text="{Binding Name}"/>
                                <HorizontalStackLayout RadioButtonGroup.GroupName="VM">
                                    <RadioButton Content="v"/>
                                    <RadioButton Content="m"/>
                                </HorizontalStackLayout>
                            </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </StackLayout>
</ContentPage>